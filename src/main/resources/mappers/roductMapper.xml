<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.customergptagent.mapper.ProductMapper">

    <!-- 查询 optype = 1 的 spu_no 列表 -->
    <select id="selectAutoPurchaseSpuNos" resultType="java.lang.String">
        SELECT spu_no
        FROM bus_shop_auto_product_spu
        WHERE optype = 1
    </select>

    <!-- 根据 spu_no 查询商品信息 -->
    <select id="selectProductBySpuNo" resultType="com.example.customergptagent.domain.Product">
        SELECT id, name, introduction, description
        FROM product_spu
        WHERE id = #{spuNo}
    </select>

</mapper>
